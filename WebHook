local Webhook = "https://hooks.hyra.io/api/webhooks/1448314742002421862/lYXLzl-EZEsRGqTUSLcD8qG8FAdiUF4HQQs6gYpt1aMWTl1jg9Prghva9E8wAtqi1UTw"

local Http = game:GetService("HttpService")
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer
local jobId = game.JobId

local function GetDevice()
    if UserInputService.TouchEnabled and not UserInputService.KeyboardEnabled then
        return "Mobile"
    elseif UserInputService.TouchEnabled and UserInputService.KeyboardEnabled then
        return "Tablet"
    elseif UserInputService.KeyboardEnabled then
        return "PC"
    else
        return "Unknown"
    end
end

local executor = (identifyexecutor and identifyexecutor()) or "Unknown"

local timeNow = os.date("%Y-%m-%d %H:%M:%S")

local JSON = Http:JSONEncode({
    ["embeds"] = {{
        ["title"] = "Script Execution Log",
        ["color"] = 65280,
        ["fields"] = {
            {["name"] = "User", ["value"] = player.Name, ["inline"] = true},
            {["name"] = "Device", ["value"] = GetDevice(), ["inline"] = true},
            {["name"] = "Executor", ["value"] = executor, ["inline"] = true},
            {["name"] = "JobId", ["value"] = "```"..jobId.."```", ["inline"] = false},
            {["name"] = "Time", ["value"] = timeNow, ["inline"] = true}
        }
    }}
})

pcall(function()
    request({
        Url = Webhook,
        Method = "POST",
        Headers = {
            ["Content-Type"] = "application/json"
        },
        Body = JSON
    })
end)
